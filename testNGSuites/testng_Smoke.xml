<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="All Test Suite">

    <groups>
        <run>
            <include name="Smoke"/>
        </run>
    </groups>


    <listeners>
        <listener class-name="testUtils.Listeners"/>
    </listeners>

    <test verbose="2" preserve-order="true" name="End to End Framework Test">
        <classes>
            <class name="org.example.ECommerce_tc_4_Hybrid"/>
        </classes>
    </test>


    <test verbose="2" preserve-order="true" name="Error Validation Test">
        <classes>
            <class name="org.example.ECommerce_tc_2"/>
        </classes>
    </test>

</suite>